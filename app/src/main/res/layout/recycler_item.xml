<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recycler_equipment_card"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/recImage"
            android:src="@drawable/baseline_location_on_24"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/recQr"
            android:text="Kode QR"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/recImage"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/recSpace"
            android:text=" / "
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="0dp"
            android:layout_toEndOf="@id/recQr"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/recLokasi"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/recSpace"
            android:layout_marginEnd="10dp"
            android:maxLines="1"
            android:text="Lokasi"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recTanggal"
            android:text="Tanggal"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="15dp"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_below="@id/recLokasi"
            android:layout_toEndOf="@id/recUser"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recUser"
            android:text="User"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_toEndOf="@id/recImage"
            android:layout_below="@id/recQr"
            android:layout_marginStart="10dp"
            android:maxLines="1"
            android:layout_marginBottom="12dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recDetail"
            android:text="Tampilkan Lebih banyak >"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_below="@id/recImage"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:textStyle="bold"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/expandableCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recDetail"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titik Koordinat : "
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/recLongitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Longitude"
                app:layout_constraintStart_toEndOf="@+id/textView"
                android:layout_marginStart="10dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/recLatitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latitude"
                app:layout_constraintStart_toEndOf="@+id/recLongitude"
                tools:ignore="MissingConstraints"
                android:layout_marginStart="10dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>